<main>
      <!-- signin -->
      <div class="row">
        <div class="col-12">
          <div class="form-wrapper">
            <div class="heading">
              Quản Lý Thư Viện
            </div>
            <form action="/login" method="post" class="form1" id="register-form" >
              <div class="form-content">
                <div class="form-input">
                  <div class="form-group">
                    <input
                      type="text"
                      name="username"
                      id="username"
                      placeholder="Tên đăng nhập"
                      class="input-box"
                      rules="required|min"
                    />
                    <span id="error"></span>
                  </div>
                  <div class="form-group">
                    <input
                      type="password"
                      name="password"
                      id="password"
                      placeholder="Mật Khẩu"
                      class="input-box"
                      rules="required|password"
                    />
                    <span id="error"></span>
                  </div>
                </div>
                <div class="form-submit-login">
                  <button type="submit" name="login">Đăng nhập</button>
                </div>

                <div class="form-line">
                  {{#if error}}
                      <p>Sai tên đăng nhập hoặc mật khẩu</p>
                  {{/if}}
                </div>
                
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- modal-signup -->
      
    </main>
    <script>
      Validator("#register-form");
    </script>